@model System.Collections.Generic.List<JVBusService.Models.BusStop>

@{
    ViewBag.Title = "Bus Stop Listing";
}

<h2>Bus Stop Listing</h2>

<p>
    <a asp-controller="JVBusStop" asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>
            Bus Stop Number
        </th>
        <th>
            Location
        </th>
        <th>
            Location Hash
        </th>
        <th>
            Going Downtown
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusStopNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoingDowntown)
            </td>
            <td>
                <a asp-controller="JVBusStop" asp-action="Edit" asp-route-id="@item.BusStopNumber">Edit</a> |
                <a asp-controller="JVBusStop" asp-action="Details" asp-route-id="@item.BusStopNumber">Details</a> |
                <a asp-controller="JVBusStop" asp-action="DeleteConfirm" asp-route-id="@item.BusStopNumber">Delete</a>
            </td>
        </tr>
    }

</table>
@model JVBusService.Models.BusStop

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-controller="JVBusStop" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <h4>Edit Bus Stop @Model.BusStopNumber</h4>
        <hr />
        <div class="form-group">
            <label asp-for="BusStopNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DisplayFor(s => s.BusStopNumber)
                <input type="hidden" asp-for="BusStopNumber" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LocationHash" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DisplayFor(s => s.LocationHash)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="GoingDowntown" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GoingDowntown" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>